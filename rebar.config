%% -*- erlang -*-
{erl_opts, [debug_info]}.
{xref_checks, [undefined_function_calls]}.

{cover_enabled, true}.
{eunit_opts, [verbose]}.

{clean_files, ["*~","*/*~","*/*.xfm","test/*.beam"]}.

{deps, [ {parse_trans, "3.4.0"}
       , {setup, "2.1.0"}
       ]}.

{profiles,
 [
  {docs,
   [
    {deps,
     [
      {edown, "0.8.1"}
     ]},
    {edoc_opts, [{doclet, edown_doclet},
		 {top_level_readme,
		  {"./README.md",
		   "http://github.com/uwiger/jobs"}},
                 {app_default, "https://www.erlang.org/doc/man"}]}
   ]},
  {test,
   [
    {deps,
     [
      {meck, "0.8.11"}
     ]}
   ]}
 ]}.

